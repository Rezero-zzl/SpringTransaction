<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.transaction.mybatis.service.AddressMapper">
    <resultMap id="propertyMap" type="org.example.transaction.mybatis.entity.Address">
        <id property="id" column="id"/>
        <result property="personId" column="person_id"/>
        <result property="address" column="address"/>
    </resultMap>

    <select id="select" resultMap="propertyMap">
        select * from address where id = #{id}
    </select>
    <update id="update" parameterType="org.example.transaction.mybatis.entity.Address" >
        update address set address = #{address} where person_id = #{personId}
    </update>
    <insert id="insert" parameterType="org.example.transaction.mybatis.entity.Address" useGeneratedKeys="true" keyProperty="id">
        insert into address(person_id,address) values(#{personId},#{address})
    </insert>
    <delete id="delete" parameterType="org.example.transaction.mybatis.entity.Address">
        delete from address where id = #{id}
    </delete>

</mapper>