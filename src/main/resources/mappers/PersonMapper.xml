<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.transaction.mybatis.service.PersonMapper">
    <resultMap id="propertyMap" type="org.example.transaction.mybatis.entity.Person">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sex" column="sex"/>
    </resultMap>
    <select id="select" resultType="org.example.transaction.mybatis.entity.Person">
        select * from person where id = #{id}
    </select>
    <update id="update" parameterType="org.example.transaction.mybatis.entity.Person">
        update person set name = #{name},sex = #{sex} where id = #{id}
    </update>
    <insert id="insert" parameterType="org.example.transaction.mybatis.entity.Person" useGeneratedKeys="true" keyProperty="id">
        insert into person(name,sex) values(#{name},#{sex})
    </insert>
    <delete id="delete" parameterType="org.example.transaction.mybatis.entity.Person">
        delete from person where id = #{id}
    </delete>
</mapper>